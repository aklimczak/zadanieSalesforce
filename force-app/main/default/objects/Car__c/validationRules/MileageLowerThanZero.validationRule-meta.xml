<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MileageLowerThanZero</fullName>
    <active>true</active>
    <errorConditionFormula>Mileage__c &lt; 0 ||  Mileage_When_Last_Timing_Replacement__c &lt; 0</errorConditionFormula>
    <errorMessage>Mileage cannot be lower than zero.</errorMessage>
</ValidationRule>
